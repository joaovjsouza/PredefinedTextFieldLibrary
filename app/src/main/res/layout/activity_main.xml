<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.goodluck.predefined_text_field.PredefinedTextField
        android:layout_marginHorizontal="30dp"
        android:id="@+id/text_field_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/text_field_email"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:predefined_style="person" />

    <com.goodluck.predefined_text_field.PredefinedTextField
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="30dp"
        android:id="@+id/text_field_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/text_field_password"
        app:layout_constraintTop_toBottomOf="@+id/text_field_person"
        app:predefined_style="email" />

    <com.goodluck.predefined_text_field.PredefinedTextField
        android:layout_marginHorizontal="30dp"
        android:id="@+id/text_field_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/text_field_search"
        app:layout_constraintTop_toBottomOf="@+id/text_field_email"
        app:predefined_style="password" />

    <com.goodluck.predefined_text_field.PredefinedTextField
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="30dp"
        android:id="@+id/text_field_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_field_password"
        app:predefined_style="search" />

</androidx.constraintlayout.widget.ConstraintLayout>